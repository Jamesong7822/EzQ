#:import NoTransition kivy.uix.screenmanager.NoTransition

ScreenManager:
    id: screen_manager
    transition: NoTransition()
    MenuScreen:
        id: menu_screen
        name: "MenuScreen"
        manager: screen_manager

    SubmitScreen:
        id: submit_screen
        name: "SubmitScreen"
        manager: screen_manager

<MenuScreen>:
    grid: Grid

    BoxLayout:
        orientation: "vertical"

        Label:
            text: "Menus"
            font_size: "50sp"
            size_hint: (1, 0.2)

        GridLayout:
            rows: 3
            cols: 2
            spacing: 20
            padding: 20
            size_hint: (1, 0.7)

            id: Grid

        BoxLayout:
            orientation: "horizontal"
            size_hint: (1, 0.2)

            Label:
                text: "Additional information"
                font_size: dp(30)

            TextInput:
                text: ""
                id: additional_info_input

        Button:
            text: "Submit"
            size_hint: (1, 0.2)
            on_release:
                root.get_additional_info()
                root.check_order()


<SubmitScreen>:
    BoxLayout:
        orientation: "vertical"
        id: boxy

        Label:
            text: "Order: " + root.order
            font_size: dp(30)
            size_hint: (1, 0.2)

        Label:
            text: "Additional info: " + root.additional_info
            font_size: dp(30)
            size_hint: (1, 0.2)

        BoxLayout:
            orientation: "vertical"
            id: boxy
            spacing: 20
            padding: 20
            size_hint:(1, 0.5)

        BoxLayout:
            orientation: "horizontal"
            size_hint: (1, 0.1)

            Button:
                text: "Back"
                size_hint: (0.5, 1)
                on_release:
                    root.manager.current="MenuScreen"

            Button:
                text: "Submit"
                size_hint: (0.5, 1)
                on_release:
                    root.check_nums()
