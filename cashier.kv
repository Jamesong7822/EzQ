ScreenManager:
    id: screen_manager
    MenuScreen:
        id: menu_screen
        name: "MenuScreen"
        manager: screen_manager

    SubmitScreen:
        id: submit_screen
        name: "SubmitScreen"
        manager: screen_manager

<MenuScreen>:

    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
            
    grid: Grid

    BoxLayout:
        orientation: "vertical"

        Label:
            text: "Menus"
            font_size: "50sp"
            size_hint: (1, 0.2)
            color: 0.1, 0.5, 0.81, 1  

        GridLayout:
            rows: 3
            cols: 2
            spacing: 20
            padding: 20
            size_hint: (1, 0.7)

            id: Grid

        BoxLayout:
            orientation: "horizontal"
            size_hint: (1, 0.2)

            Label:
                text: "Additional information"
                font_size: dp(30)
                color: 0.96, 0.75, 0.12, 1  

            TextInput:
                text: ""
                id: additional_info_input

        Button:
            text: "Submit"
            font_size: 20
            background_normal: ''
            background_color: 0.55, 0.65, 0.7, 1
            size_hint: (1, 0.2)
            on_release:
                root.get_additional_info()
                root.check_order()


<SubmitScreen>:

    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: "vertical"
        id: boxy

        Label:
            text: "Order: " + root.order
            font_size: dp(30)
            size_hint: (1, 0.2)
            color: 0.96, 0.54, 0.41, 1            

        Label:
            text: "Additional info: " + root.additional_info
            font_size: dp(30)
            size_hint: (1, 0.2)
            color: 0.1, 0.5, 0.81, 1 

        BoxLayout:
            orientation: "vertical"
            id: boxy
            spacing: 20
            padding: 20
            size_hint:(1, 0.5)

        BoxLayout:
            orientation: "horizontal"
            size_hint: (1, 0.1)

            Button:
                text: "Back"
                font_size: 20
                background_normal: ''
                background_color: 0.55, 0.65, 0.7, 1
                size_hint: (0.5, 1)
                on_release:
                    root.manager.current="MenuScreen"

            Button:
                text: "Submit"
                font_size: 20
                background_normal: ''
                background_color: 0.55, 0.65, 0.7, 1
                size_hint: (0.5, 1)
                on_release:
                    root.check_nums()
