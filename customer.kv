#:import NoTransition kivy.uix.screenmanager.NoTransition

ScreenManager:
    id: screen_manager
    transition: NoTransition()
    
    OrderScreen:
        id: order_screen
        name: "OrderScreen"
        manager: screen_manager

    SubmitScreen:
        id: submit_screen
        name: "SubmitScreen"
        manager: screen_manager
    

<OrderScreen>:

    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
            
    orientation: "vertical"
    spacing: 50

    BoxLayout:
        orientation: "vertical"
        spacing: 30

        Label:
            id: name
            text: "Western Store"
            font_size: 100
            color: 0.96, 0.54, 0.41, 1             

        Image:
            source: 'DW 1D-02-02.png'

                
        BoxLayout:
            orientation: 'horizontal'
            Label:
                text: ''
                size_hint_x: 0.5
            TextInput:
                unfocus_on_touch: False
                id: Phone
                hint_text: "Enter Phone Number"
                font_size: 30
                background_color: 1, 0.93, 0.75, 1
                foreground_color: 1, 0.93, 0.75, 1
                size_hint_x: 6
                on_touch_down:
                    root.set_pop_up("Phone Number")
            Button:
                text: 'Submit'
                color: 1, 1, 1, 1
                font_size: 30
                background_normal: ''
                background_color: 0.55, 0.65, 0.7, 1
                size_hint_x: 3
                on_press:
                    app.send_info(root.ids.Phone.text)
                    root.ids.Phone.text=""
                    root.manager.current="SubmitScreen"
            Label:
                text: ''
                size_hint_x: 0.5

        
                    

<SubmitScreen>:

    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
            
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "Successfully Submitted"
            font_size: 60
            color: 0.1, 0.5, 0.81, 1
        Button:
            text: "Return"
            color: 1, 1, 1, 1
            size_hint: (1, 0.2)
            font_size: 30
            background_normal: ''
            background_color: 0.55, 0.65, 0.7, 1
            on_press:
                root.manager.current="OrderScreen"
