ScreenManager:
    id: screen_manager
    OrderScreen:
        id: order_screen
        name: "OrderScreen"
        manager: screen_manager

    SubmitScreen:
        id: submit_screen
        name: "SubmitScreen"
        manager: screen_manager

<OrderScreen>:

    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
            
    orientation: "vertical"
    spacing: 50

    BoxLayout:
        orientation: "vertical"
        spacing: 50

        Label:
            id: name
            text: "Input your number"
            font_size: 50
            color: 0.1, 0.5, 0.81, 1


        BoxLayout:
            orientation: 'horizontal'
            Label:
                text: 'EzQ'
                font_size: 70
                color: 0.1, 0.5, 0.81, 1

        BoxLayout:
            orientation: 'horizontal'
            Label:
                text: ''
                size_hint_x: 2
            TextInput:
                unfocus_on_touch: False
                id: Phone
                hint_text: "Phone number"
                font_size: 50
                size_hint_x: 6
                on_touch_down:
                    root.set_pop_up("Phone Number")
            Label:
                text: ''
                size_hint_x: 2


        Button:
            text: "Submit"
            font_size: 50
            on_press:
                app.send_info(root.ids.Phone.text)
                root.ids.Phone.text=""
                root.manager.current="SubmitScreen"

<SubmitScreen>:

    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
            
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "Successfully Submitted"
            font_size: 60
            color: 0.1, 0.5, 0.81, 1
        Button:
            text: "Return"
            size_hint: (1, 0.2)
            font_size: 30
            on_press:
                root.manager.current="OrderScreen"
